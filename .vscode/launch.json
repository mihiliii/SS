{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: g++ build and debug linker (makefile)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/linker",
            "args": [
                "-hex",
                "-place=my_code@0x40000000",
                "-place=math@0xF0000000",
                "-o",
                "program.hex",
                "handler.o",
                "math.o",
                "main.o",
                "isr_terminal.o",
                "isr_timer.o",
                "isr_software.o"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build linker (makefile)",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "C/C++: g++ build and debug assembler (makefile)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/assembler",
            "args": [
                "-o",
                "test1.o",
                "test1.s"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build assembler (makefile)",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}